# StreamGoGambler Configuration
# Copy this file to .env and fill in your values

# ===================
# Required Settings
# ===================

# Your Twitch bot account username
TWITCH_USERNAME=your_bot_username

# OAuth token for your bot (without the "oauth:" prefix)
# Get one at https://twitchapps.com/tmi/
TWITCH_OAUTH=your_oauth_token_here

# Channel to join (without the # prefix)
TWITCH_CHANNEL=target_channel

# Command prefix for bot commands
COMMAND_PREFIX=!

# Status command name (used as !status by default)
STATUS_COMMAND=status

# Message sent when the bot first connects
CONNECT_MESSAGE=!pyk

# Name of the trusted boss bot whose messages are parsed
BOSS_BOT_NAME=demonzzbot

# ===================
# Optional Settings
# ===================

# Default heist amount (default: 1000)
HEIST_AMOUNT=1000

# Cost per !slots command (default: 2000)
SLOTS_COST=2000

# Cost per !ffa command (default: 1000)
ARENA_COST=1000

# Automatically sends !slots on interval
# Is autoslots enable on startup (default: false)
AUTO_SLOTS_ENABLED=false

# Autoslots interval in minutes (default: 15)
AUTO_SLOTS_INTERVAL=15

# Send message on permanent bans (default: false)
BAND_ON_PERMA=false

# Message to send when a permanent ban is detected (default: BAND)
BAND_MESSAGE=BAND

# How to handle parsed points (default: true)
# true = add points to current balance (delta mode)
# false = set balance to exact value
POINTS_AS_DELTA=true

# Token bucket size for rate limiting (default: 20)
SAY_BUCKET_SIZE=20

# Token refill interval in milliseconds (default: 150)
SAY_REFILL_MS=150

# Send greeting on reconnects (default: false)
GREET_ON_RECONNECT=false

# Log level: debug, info, warn, error (default: info)
LOG_LEVEL=info

# HTTP port for health endpoint, 0 to disable (default: 0)
HEALTH_PORT=0

# ===================
# GUI Settings
# ===================

# Enable or disable the graphical user interface (default: true)
# Set to false to run in headless/console mode
GUI_ENABLED=true

# Maxiumum number of log lines in graphical user interface (default: 500)
MAX_LOGS_LINES=500
